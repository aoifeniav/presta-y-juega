{% extends "base.html.twig" %}

{% block body %}
	<section>
		{% if games|length == 0 %}
		<h4 class="text-center mb-5">{{user.name}} no tiene ning√∫n juego en su biblioteca.</h4>
		{% else %}
		<h4 class="text-center mb-5">Estos son los juegos de {{user.name}}</h4>
		<div class="d-flex flex-wrap justify-content-center">
			{% for game in games %}
				<div class="card mx-3 mb-3" style="width: 20rem;">
					<div style="background-image: url('{{game.image}}'); background-position: center; background-size: 75%; background-repeat: no-repeat; width: 100%; height: 260px"></div>
					<div class="card-body text-center">
						<h5 class="card-title">{{game.name}}</h5>
						<a href="{{path('gameView', {'id': game.id})}}" class="btn btn-outline-warning">Me interesa</a>
					</div>
				</div>
			{% endfor %}
		</div>
		{% endif %}
	</section>
{% endblock %}