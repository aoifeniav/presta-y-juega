{% extends "base.html.twig" %}

{% block title %}
	Presta y Juega: Peticiones
{% endblock %}

{% block body %}
{% for message in app.flashes('deletionSuccessful') %}
<h5 class="text-center mb-5">{{ message }}</h5>
{% endfor %}
	<section>
        <!-- TODO: Cambiar texto segÃºn haya o no peticiones -->
		<h4 class="text-center mb-5">Estos son los juegos de tu biblioteca</h4>
		<div class="d-flex flex-wrap">
			{% for game in games %}
				<div class="card mx-3" style="width: 20rem;">
					<div style="background-image: url('{{game.image}}'); background-position: center; background-size: 75%; background-repeat: no-repeat; width: 100%; height: 260px"></div>
					<div class="card-body text-center">
						<h5 class="card-title">{{game.name}}</h5>
						<div class="d-flex justify-content-between">
							<a href="{{path('gameView', {'id': game.id})}}" class="btn btn-outline-warning">Detalles</a>
                            <a href="#" class="btn btn-warning">Prestar</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}